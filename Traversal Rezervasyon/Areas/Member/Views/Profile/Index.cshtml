@model Traversal_Rezervasyon.Areas.Member.Models.UserEditViewModel

@{
    Layout = "_UserLayout";
}

<h1>Profilim</h1>

<form method="post"> 
    @Html.Label("Adınız")
    <input type="text" asp-for="Name" class="form-control">
    <br/>
    @Html.Label("Soyadınız")
    <input type="text" asp-for="SurName" class="form-control">
    <br/>
    @Html.Label("Mail Adresiniz")
    <input type="text" asp-for="Mail" class="form-control">
    <br/>
    @Html.Label("Telefon Numaranız")
    <input type="text" asp-for="PhoneNumber" class="form-control">
    <br/>
    @Html.Label("Şifreniz")
    <input type="text" asp-for="Pasword" class="form-control">
    <br/>
    @Html.Label("Şifre Tekrar")
    <input type="text" asp-for="ConfirmPasword" class="form-control">
    <br/>
</form>

