@using EntityLayer.Concrete
@model List<Rezervation>
@{
    ViewData["Title"] = "MyCurrentReservation";
    Layout = "_MemberLayout";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">aktif rezervasyonlar</h4>
                <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                        <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                        <li><a data-action="close"><i class="ft-x"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="card-content collapse show">
                <div class="card-body">
                    <p class="card-text">traversal uzerinden yapmis oldugunuz aktif rezervasyonlarinizi gorebilirsiniz.</p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>lokasyon</th>
                                <th>kisi sayisi</th>
                                <th>rezervasyon tarihi</th>
                                <th>durum</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th>@item.RezervationId</th>
                                    <td>@item.Destination.City</td>
                                    <td>@item.PersonCount</td>
                                    <td>@item.RezervassyonDate</td>
                                    <td>@item.Status</td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>