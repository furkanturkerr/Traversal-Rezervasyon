@using EntityLayer.Concrete
@model List<Guide>

@{
    Layout = "_AdminLayout";
    int count = 0;
}



<h1>Rehber Listesi</h1>
<br />
<a href="/Admin/Guide/AddGuide" class="btn btn-primary">Yeni Rehber Ekle</a>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Görsel</th>
        <th>Ad Soyad</th>
        <th>Açıklama</th>
        <th>Durum</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>           
            <td><img style="border-radius: 50%;" src="@item.Image" height="70" width="70"/></td>
            <td>@item.Name</td>
            <td>@item.Description</td>
                @if (item.Status == true)
                {
                    <td><a href="~/Admin/Guide/ChangtoFalse/@item.GuideId" class="btn btn-outline-warning">Pasif Yap</a></td>
                }
                else
                {
                    <td><a href="~/Admin/Guide/ChangtoTrue/@item.GuideId" class="btn btn-outline-success">Aktif Yap</a></td>
                }
            <td><a href="~/Admin/Guide/EditGuide/@item.GuideId" class="btn btn-outline-primary">Düzenle</a></td>
        </tr>
    }
</table>