@using EntityLayer.Concrete
@model List<Rezervation>

@{
    Layout = "_AdminLayout";
}

<h1>Kullanıcının Geçmiş Rezervasyonları</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Misaafir Ad Soyad</th>
        <th>Rota</th>
        <th>Kişi Sayısı</th>
        <th>Rezervasyon Tarihi</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.RezervationId</td>
            <td>###</td>
            <td>@item.Destination.City</td>
            <td>@item.PersonCount</td>
            <td>@(((DateTime)item.RezervassyonDate).ToString("dd-MMM-yyy"))</td>
            <td><a href="#" class="btn btn-outline-info">Detaylar</a></td>
        </tr>
    }
</table>