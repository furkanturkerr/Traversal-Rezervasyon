@model System.Collections.Generic.List<Traversal_Rezervasyon.CQRS.Results.DestinationResult.GetAllDestinationQueryReult>

@{
    Layout = "_AdminLayout";
    int count = 1;
}

<h1>CQRS Tur Rotası Verileri</h1>

<a href="/admin/destination/create" class="btn btn-primary">Yeni Tur Ekle</a>
<br/>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Şehir</th>
        <th>Gün-Gece</th>
        <th>Fiyat</th>
        <th>Kapasite</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.city</td>
            <td>@item.daynight</td>
            <td>@item.price</td>
            <td>@item.capacity</td>
            <td><a href="#" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="#" class="btn btn-outline-warning">Güncelle</a></td>
        </tr>
    }
</table>