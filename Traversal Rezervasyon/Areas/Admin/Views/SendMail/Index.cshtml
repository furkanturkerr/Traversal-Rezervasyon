@model Traversal_Rezervasyon.Models.MailRequest

@{
    Layout = "_AdminLayout";
}

<h1>Yeni Mail Gönderme Sayfası</h1>

<form method="post">
    
    <div class="form-group">
        @Html.Label("Alıcı Mail Adresi")
        <input type="text" asp-for="RecieverMail " class="form-control"/>
    </div>
    <br/>
    <div class="form-group">
        @Html.Label("Konu Başlığı")
        <input type="text" asp-for="Subject" class="form-control"/>
    </div>
    <br/>
    <div class="form-group">
        @Html.Label("Mesaj İçeriği")
        <textarea asp-for="Body" cols="30" rows="5" class="form-control"></textarea>
    </div>
    <button class="btn btn-outline-success">Mail Gönder</button>
</form>