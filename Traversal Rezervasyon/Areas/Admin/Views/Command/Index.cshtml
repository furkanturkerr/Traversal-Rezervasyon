@using EntityLayer.Concrete
@model List<Commend>   
@{
    Layout = "_AdminLayout";
}

<h1>Yorum Listesi</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kullanıcı</th>
        <th>Blog</th>
        <th>Tarih</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CommendId</td>
            <td>@item.CommendUser</td>
            <td>@item.Destination.City</td>
            <td>@(((DateTime)item.CommendDate).ToString("dd-MMM-yyy"))</td>
            <td><a class="btn btn-outline-danger" href="/Admin/Command/DeleteCommand/@item.CommendId">Sil</a></td>
        </tr>
    }
</table>