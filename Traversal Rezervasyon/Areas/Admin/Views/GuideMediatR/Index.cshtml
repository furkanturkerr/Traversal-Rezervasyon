@model List<Traversal_Rezervasyon.CQRS.Results.GuideResults.GetAllGuideQueryResult>

@{
    Layout = "_AdminLayout";
}

<h1>QCRS MediatR Rehber Listesi</h1>
<br/>
<a href="/Admin/GuideMediatR/AddGuide" class="btn btn-primary">Yeni Rehber Ekle</a>
<br/>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Rehber Adı</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.GuideId</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td><a href="/Admin/DestinationCQRS/DeleteDestination/" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Admin/GuideMediatR/GetGuides/@item.GuideId" class="btn btn-outline-warning">Güncelle</a></td>
        </tr>
    }
</table>