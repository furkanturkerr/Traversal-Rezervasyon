@model List<AppRole>

@{
    Layout = "_AdminLayout";
    int Count = 1;
}
<h1>Role Listesi</h1>
<br/>
<a href="~/Admin/Role/CreateRole" class="btn btn-outline-dark">Yeni Role Ekle</a>
@if (Model.Count > 0)
{
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Rol Adı</th>
            <th>Rolü Sil</th>
            <th>Rolü Güncelle</th>
        </tr>

        @foreach (var item in Model)
        {
            Count++;
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td><a href="" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="" class="btn btn-outline-warning">Güncelle</a></td>
            </tr>
        }
    
    </table>
}else
{
    <tr><td>Herhangi bir Rol Bulunamadı</td></tr>   
}
