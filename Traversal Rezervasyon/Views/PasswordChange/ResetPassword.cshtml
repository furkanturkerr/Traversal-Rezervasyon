@model ResetModelViewModel
@{
    Layout = null;
    var userId = TempData["userid"]?.ToString();
    var token = TempData["token"]?.ToString();
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br /><br />

    <h2>Şifre Yenileme Sayfası</h2>
    
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }
    
    @if (ViewBag.Errors != null)
    {
        <div class="alert alert-danger">
            @foreach (var error in ViewBag.Errors)
            {
                <p>@error</p>
            }
        </div>
    }
    
    <form method="post">
        <!-- ÖNEMLİ: Hidden input'lar -->
        <input type="hidden" name="UserId" value="@userId" />
        <input type="hidden" name="Token" value="@token" />
        
        <label>Şifrenizi Giriniz</label>
        <input type="password" class="form-control" asp-for="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
        <br />
        
        <label>Şifrenizi Tekrar Giriniz</label>
        <input type="password" class="form-control" asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        <br />
        
        <button type="submit" class="btn btn-primary">Şifreyi Güncelle</button>
    </form>
</div>