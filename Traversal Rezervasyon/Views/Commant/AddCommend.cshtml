<div class="leave-comment-form mt-5" id="reply">
    <h4 class="side-title mb-2">Bir Yorum Bırakın</h4>
    <p class="mb-4">İşaretli alanları doldurmanız gerekli *
    </p>
    <form method="post" asp-action="AddCommend" asp-controller="Commant">
        
        <input type="hidden" value="@ViewBag.destid" name="DestinationId" />
        <div class="form-group">
            <textarea name="CommendContent" class="form-control" placeholder="Yorumunuz*" required=""
                                spellcheck="false"></textarea>
        </div>

        <div class="submit text-right">
            <button class="btn btn-style btn-primary">Yorum Yap</button>
        </div>
    </form>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>